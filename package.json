{
    "name": "@lemoncloud/lemon-front-lib",
    "version": "0.0.3",
    "description": "lemon front core library",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "start": "tsc -w",
        "prebuild": "rm -rf dist/ && rm -rf lib/",
        "build": "npm run build:lib && npm run build:dist",
        "build:lib": "tsc -d",
        "build:dist": "webpack --progress --profile --bail --optimize-minimize",
        "dev:test": "jest --config=jest.config.json --watchAll",
        "test": "jest --config=jest.config.json",
        "lint": "tsc --noEmit && eslint 'src/**/*.{js,ts,jsx,tsx}' --fix",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
        "prepare": "npm run build",
        "prepublishOnly": "npm test",
        "build:ci": "npm run test && npm run build"
    },
    "browser": {
        "fs": false
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/lemoncloud-io/lemon-front-lib.git"
    },
    "files": [
        "lib/**/*",
        "dist/**/*",
        "example/**/*"
    ],
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=8.10.0"
    },
    "author": "Louis",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/lemoncloud-io/lemon-front-lib/issues"
    },
    "homepage": "https://github.com/lemoncloud-io/lemon-front-lib#readme",
    "dependencies": {
        "amazon-cognito-identity-js": "^3.2.0",
        "aws-sdk": "^2.585.0",
        "axios": "^0.19.0",
        "crypto-js": "^3.1.9-1",
        "whatwg-fetch": "3.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.7.4",
        "@babel/core": "^7.7.4",
        "@babel/polyfill": "^7.7.0",
        "@babel/preset-env": "^7.7.4",
        "@types/axios": "^0.14.0",
        "@types/crypto-js": "^3.1.43",
        "@types/jest": "^24.0.12",
        "@types/morgan": "^1.7.35",
        "@types/node": "^12.12.9",
        "@types/socket.io-client": "^1.4.32",
        "@types/supertest": "^2.0.7",
        "@typescript-eslint/eslint-plugin": "^1.7.0",
        "@typescript-eslint/parser": "^1.7.0",
        "awesome-typescript-loader": "^5.2.1",
        "clean-webpack-plugin": "^3.0.0",
        "codecov": "^3.4.0",
        "concurrently": "^4.1.0",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^4.2.0",
        "eslint-plugin-prettier": "^3.0.1",
        "jest": "^24.8.0",
        "prettier": "^1.17.0",
        "supertest": "^4.0.2",
        "ts-jest": "^24.0.2",
        "typescript": "^3.4.5",
        "uglifyjs-webpack-plugin": "^2.2.0",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.10",
        "whatwg-fetch": "3.0.0"
    }
}
